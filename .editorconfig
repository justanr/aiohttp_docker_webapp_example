root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_new_line = false
trim_trailing_whitespace = true
indent_size = 4

[*.{js,py}]
max_line_length = 100

[*.{js,css,less,yml,yaml}]
indent_size = 2

[*.{md,rst}]
max_line_length = 80
trim_trailing_whitespace = false
insert_final_new_line = true

[Makefile]
indent_style = tab
